<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".OpenWeatherActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="현재 날씨"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:textColor="@color/material_green_500"
                android:layout_gravity="center"
                android:gravity="center"/>

        <TextView
                android:id="@+id/setting"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="설정"
                android:textStyle="bold"
                android:gravity="center"/>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_green_500"
            android:layout_marginBottom="30dp"/>

    <ImageView
            android:id="@+id/current_icon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#108AD5"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:text="최저기온"/>

            <TextView
                    android:id="@+id/current_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#108AD5"
                    android:maxLines="1"
                    android:layout_marginLeft="10dp"
                    android:text=""/>

        </LinearLayout>


        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#FF8F00"
                    android:maxLines="1"
                    android:layout_marginLeft="10dp"
                    android:text="최저기온"/>

            <TextView
                    android:id="@+id/current_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="#FF8F00"
                    android:maxLines="1"
                    android:layout_marginLeft="10dp"
                    android:text=""/>

        </LinearLayout>


        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#E96F9F"
                    android:maxLines="1"
                    android:layout_marginLeft="10dp"
                    android:text="최저기온"/>


            <TextView
                    android:id="@+id/current_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="#E96F9F"
                    android:maxLines="1"
                    android:layout_marginLeft="10dp"
                    android:text=""/>

        </LinearLayout>

    </LinearLayout>

    <TextView
            android:id="@+id/current_main"
            android:padding="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="42dp"
            android:textStyle="italic"
            android:textColor="#3EADF1"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text=""
    />

    <TextView
            android:id="@+id/current_description"
            android:padding="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:textColor="#EF6C00"
            android:textStyle="bold"
            android:gravity="center"
            android:text=""
    />
</LinearLayout>